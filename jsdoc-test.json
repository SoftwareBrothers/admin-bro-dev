{
    "tags": {
        "allowUnknownTags": ["mermaid", "category"]
    },
    "source": {
        "include": ["./adminjs/src",
                    "./adminjs-hapijs",
                    "./adminjs-mongoose",
                    "./adminjs-sequelizejs",
                    "./adminjs-expressjs"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "jsdoc-mermaid",
        "better-docs/category",
        "node_modules/jsdoc-typeof-plugin"
    ],
    "opts": {
        "encoding": "utf8",
        "readme": "./docs-src/home.md",
        "recurse": true,
        "pedantic": true,
        "tutorials": "./docs-src/tutorials",
        "template": "templates/silent"
    }
}
